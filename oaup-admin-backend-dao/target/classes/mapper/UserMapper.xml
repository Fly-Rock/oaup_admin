<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oaup.admin.backend.dao.UserDao">
	<resultMap id="userMap" type="com.oaup.admin.backend.support.model.po.User">
        <id column="user_id" property="userid" jdbcType="INTEGER"/>
        <result column="user_name" property="username" jdbcType="VARCHAR"/>
    </resultMap>
    
	<select id="load" resultMap="userMap" parameterType="string">
		select * from t_user where userId =
		#{userid, jdbcType=INTEGER}
	</select>

	<select id="query" resultMap="userMap" parameterType="map" >
		select * from t_user
		<where>
			<if test="userid != null">
				and userId = #{userid,jdbcType=INTEGER}
			</if>
			<if test="username != null">
				and userName =  #{username,jdbcType=VARCHAR}
			</if>
		</where>
	</select>

	
	<update id="update" parameterType="user">
		update t_user
		<set>
			<if test="userId != null">
				userId = #{userid,jdbcType=INTEGER},
			</if>
			<if test="userName != null">
				userName =  #{username,jdbcType=VARCHAR},
			</if>
		</set>
		<where>
			userId = #{userid,jdbcType=INTEGER}
		</where>
	</update>
	
	<delete id="delete" parameterType="user">
		delete FROM t_user 
		<where> 
			userId = #{userid,jdbcType=INTEGER}
		</where>
	</delete>

	<insert id="insert">
		insert into t_user values(#{userid,jdbcType=INTEGER} ,  #{username,jdbcType=VARCHAR});
	</insert>

	<insert id="insertBatch">
		insert into t_user
		values
		<foreach collection="list" item="item" index="index"
			separator=", ">
			(#{item.userid, jdbcType=INTEGER} , #{item.username,jdbcType=VARCHAR} )
		</foreach>
	</insert>

	<delete id="deleteBatch" parameterType="java.lang.String">
		delete FROM t_user where userId in 
		<foreach collection="list"  item="item" open="(" separator="," close=")">
			#{item.userid, jdbcType=INTEGER}
		</foreach>
	</delete>
	
</mapper>